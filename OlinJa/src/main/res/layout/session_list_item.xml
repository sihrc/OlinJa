<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:paddingTop="10dp" android:paddingBottom="10dp"
    android:background="@color/olin_white"
    >
    <TextView
        android:id = "@+id/session_title"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:background="@color/olin_silver"
        android:textColor="@color/olin_white"
        android:padding="10dp"
        android:text="@string/session_example_title"
        android:textSize="25sp"
        />

    <TextView
        android:id = "@+id/session_ninja"
        android:layout_below = "@id/session_title"
        android:layout_margin="10dp"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "@string/session_example_ninja"
        android:textSize = "@dimen/session_sub_font"/>

    <TextView
        android:id = "@+id/session_time"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/session_ninja"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text = "@string/session_example_time"
        android:textSize = "@dimen/session_sub_font"
        />

    <TextView
        android:id = "@+id/session_place"
        android:layout_alignParentRight="true"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textColor="@color/olin_white"
        android:padding="10dp"
        android:text = "@string/session_example_place"
        android:textSize = "25sp"
        />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:id="@+id/separator"
        android:visibility="visible"
        android:background="@color/olin_blue"
        android:layout_below="@+id/session_time"/>

</RelativeLayout>