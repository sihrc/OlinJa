<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:id = "@+id/center_on_me"
        android:layout_width = "0dp"
        android:layout_height = "0dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/session_title_checkoff"
        android:layout_alignParentLeft = "true"
        android:layout_alignRight = "@id/center_on_me"
        android:padding="@dimen/session_title_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/olin_white"
        android:textSize="@dimen/session_title_font"
        android:text="@string/session_title_checkoff"
        android:background="@color/olin_blue"
        />
    <Button
        android:id = "@+id/checkoff_add_queue"
        android:layout_toLeftOf="@id/center_on_me"
        android:layout_width = "@dimen/add_button_size"
        android:layout_height = "@dimen/add_button_size"
        android:layout_margin = "@dimen/button_margin"
        android:background="@drawable/plus" />
    <ListView
        android:id="@+id/session_list_checkoff"
        android:layout_below = "@id/session_title_checkoff"
        android:layout_alignParentLeft = "true"
        android:layout_alignRight = "@id/center_on_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/session_title_helpMe"
        android:layout_alignParentRight = "true"
        android:layout_alignLeft = "@id/center_on_me"
        android:padding="@dimen/session_title_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/session_title_font"
        android:text="@string/session_title_helpMe"
        android:background="@color/olin_lightblue"
        />

    <Button
        android:id = "@+id/helpMe_add_queue"
        android:layout_alignParentRight="true"
        android:layout_width = "@dimen/add_button_size"
        android:layout_height = "@dimen/add_button_size"
        android:layout_margin = "@dimen/button_margin"
        android:background="@drawable/plus"
        />
    <ListView
        android:id="@+id/session_list_helpMe"
        android:layout_below = "@id/session_title_helpMe"
        android:layout_alignParentRight = "true"
        android:layout_alignLeft = "@id/center_on_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>


